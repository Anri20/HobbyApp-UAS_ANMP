<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.hobbyapp_utsanmp.view.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/actionLogin"
            app:destination="@id/loginFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/itemHome"
        android:name="com.example.hobbyapp_utsanmp.view.HobbyListFragment"
        android:label="HobbyApp"
        tools:layout="@layout/fragment_hobby_list">
        <action
            android:id="@+id/actionHobbyDetail"
            app:destination="@id/hobbyDetailFragment" />
        <action
            android:id="@+id/actionAddHobby"
            app:destination="@id/addHobbyFragment" />
    </fragment>
    <fragment
        android:id="@+id/itemHistory"
        android:name="com.example.hobbyapp_utsanmp.view.HistoryFragment"
        android:label="History"
        tools:layout="@layout/fragment_history" >
        <argument
            android:name="idaccount"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/itemProfile"
        android:name="com.example.hobbyapp_utsanmp.view.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="idaccount"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/hobbyDetailFragment"
        android:name="com.example.hobbyapp_utsanmp.view.HobbyDetailFragment"
        android:label="HobbyApp"
        tools:layout="@layout/fragment_hobby_detail" >
        <argument
            android:name="imgUrl"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="writer"
            app:argType="string" />
        <argument
            android:name="content"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addHobbyFragment"
        android:name="com.example.hobbyapp_utsanmp.view.AddHobbyFragment"
        android:label="Add Hobby"
        tools:layout="@layout/fragment_add_hobby" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.hobbyapp_utsanmp.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/actionHobbyList"
            app:destination="@id/itemHome"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/actionRegister"
            app:destination="@id/registerFragment"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>
</navigation>